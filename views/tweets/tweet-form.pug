extends ../layout.pug

block content
    section.text-gray-600.body-font.relative
        .grid.grid-cols-6.gap-4.-m-2
            .col-start-2.col-span-4
                h1.text-2xl.font-medium.title-font.mb-4.text-gray-900(class='sm:text-3xl') Ecrire un tweet
                .relative
                form(method="POST" action="/api/tweets")
                    label.leading-7.text-sm.text-gray-600(for='message') Message
                    if errors
                        ul
                            each error in errors       
                                label(class="leading-7 text-sm text-red-600")= error
                    textarea#message.w-full.bg-gray-100.bg-opacity-50.rounded.border.border-gray-300.h-32.text-base.outline-none.text-gray-700.py-1.px-3.resize-none.leading-6.transition-colors.duration-200.ease-in-out(name='content' class='focus:border-indigo-500 focus:bg-white focus:ring-2 focus:ring-indigo-200')
                    .p-2.w-full
                    button.flex.mx-auto.text-white.bg-indigo-500.border-0.py-2.px-8.rounded.text-lg(class='focus:outline-none hover:bg-indigo-600' type='submit') Button
        